
<div class="l-row">

  {{#each posts}}
  <div class="l-item-1-2 c-postList">
    <div class="c-post__container">
      <img class="c-postList__thumb" src="/{{thumb}}" alt="">
      <div class="c-postList__text">
        <a href="/post/{{id}}">
          <h3 class="c-postList__title">{{ title }}</h3>
        </a>
        <h4 class="c-postList__publication">{{ published }}</h4>
        <div class="c-tags">
          {{#each tags}}
            <a class="c-tags__tag" href="/tags/{{tag}}">{{tag}}</a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>
